Posted by: <%= @discussion.user.user_name %> <br>
<%= @discussion.title %> <br>
<%= @discussion.content %> <br>
<%= link_to "Edit Post", edit_discussion_path, method: :get, :class=> "btn btn-secondary secondaryz" %>
<%= link_to "Delete Post", delete_discussion_path, method: :delete, :class=> "btn btn-danger" %>

<h4>Comments</h4>
<%= link_to "Comment this post", new_comment_path, method: :get, :class=> "btn btn-primary" %> <br>

<% @discussion.comments.each do |f| %>
  "<%= f.content %>"
  Posted by: <%= f.user.first_name %>
  <%= link_to "Edit", edit_comment_path(@discussion.id, f.id), method: :get, :class=> "" %>
  <%= link_to "Delete", delete_comment_path(@discussion.id, f.id), method: :delete, :class=> "" %><br>
<% end %>
